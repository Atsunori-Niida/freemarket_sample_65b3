.member-registration
  .member-box
    .member-header
      =link_to root_path,class:"down-header__a--link" do
        = image_tag "fmarket_logo_red.svg", class: 'member-header__icn'
    .progress-card
      .signup-list
        .signup-list__information
          会員情報
          .signup-list__information--ball
          .signup-list__information--line
        .signup-list__phone
          電話番号認証
          .signup-list__phone--ball
          .signup-list__phone--left
          .signup-list__phone--right
        .signup-list__address
          お届け先住所入力
          .signup-list__address--ball
          .signup-list__address--left
          .signup-list__address--right
        .signup-list__card
          支払い方法
          .signup-list__card--ball
          .signup-list__card--left
          .signup-list__card--right
        .signup-list__finish
          完了
          .signup-list__finish--ball
          .signup-list__finish--left
  .main
    .member-main
      = form_for(@user, url: {controller: 'signup', action: 'create'}, html: {class: 'member-main'}) do |f|
        .member-main__registration
          支払い方法
        .member-content
          .form
            .form__groups
              カード番号
              .form__groupss
                必須
            .form__groupsss
              %input{type:"text", class: "form__groupsss--cc", placeholder: "例) 半角数字のみ"}
          .signup-card-list
            %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1714804574"}
            %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1714804574"}
            %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1714804574"}
            %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1714804574"}
            %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1714804574"}
            %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1714804574"}
            %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1714804574"}
          .form
            .form__groups
              有効期限
              .form__groupss
                必須
            .select-wrap__half
              %select.select-wrap__half--default
                %option{value: "01"} 01
                %option{value: "02"} 02
                %option{value: "03"} 03
                %option{value: "04"} 04
                %option{value: "05"} 05
                %option{value: "06"} 06
                %option{value: "07"} 07
                %option{value: "08"} 08
                %option{value: "09"} 09
                %option{value: "10"} 10
                %option{value: "11"} 11
                %option{value: "12"} 12
              %i.icon-arrow-bottom
              %h 月
            .select-wrap__half
              %select.select-wrap__half--default
                %option{value: "19"} 19
                %option{value: "20"} 20
                %option{value: "21"} 21
                %option{value: "22"} 22
                %option{value: "23"} 23
                %option{value: "24"} 24
                %option{value: "25"} 25
