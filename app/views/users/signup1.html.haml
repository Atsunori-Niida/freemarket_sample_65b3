    = image_tag "fmarket_logo_red.svg", class: 'singunp-mercari__header--icn'
  .single-main
    .single-main__container
      新規会員登録
    .l-single-inner
      .l-single__content
        .icon-mail
          = icon('fas', ' fa-envelope', class:"icon-mail--c")
          = link_to "#" ,class: "icon-mail--link" do
            メールアドレスで登録する
        
        .icon-facebook
          = icon('fab', 'facebook-square', class:"icon-facebook--c")      
          = link_to "#" ,class: "icon-facebook--link" do
            Facebookで登録する
        
        .icon-google
          = icon('fab', 'google', class:"icon-google--c")
          = link_to "#" ,class: "icon-google--link" do
            Googleで登録する
