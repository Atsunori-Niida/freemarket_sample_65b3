.header-all
  .upper-header
    .upper-header__1
      =link_to root_path,class:"down-header__a--link" do
        = image_tag "fmarket_logo_red.svg", size: "160x42",class: "upper-img"
    .upper-header__2
      = form_with(url: searches_path, local: true, method: :get, class: 'upper-header__2') do |form|
        = form.hidden_field :id, value: params[:id]
        = form.text_field :search, class: 'upper-header__2--text', placeholder: "何をお探しですか？"
        = form.button name: nil, type: 'submit', class: 'upper-header__2--submit' do
          = icon('fas', 'search')
  .down-header
    .down-header__a
      .down-header__a--1
        =link_to "#",class:"down-header__a--link" do
          = icon("fa", "bars", class: 'down-header__a--icon')
          カテゴリーから探す
      .down-header__a--2
        =link_to "#",class:"down-header__a--link" do
          = icon('fa', "tags", class: 'down-header__a--icon')
          ブランドから探す

    - if user_signed_in?
      .down-header__b
        .down-header__b--3
          =link_to "#",class:"down-header__b--link" do
            = icon('far', "heart", class: 'down-header__b--icon')
            いいね！！一覧          
        .down-header__b--3
          =link_to "#",class:"down-header__b--link" do
            = icon('far', "bell", class: 'down-header__b--icon')
            お知らせ          
        .down-header__b--3
          =link_to "#",class:"down-header__b--link" do
            = icon('fas', "check", class: 'down-header__b--icon')
            やることリスト
        .down-header__b--3
          =link_to user_path(current_user), class:"down-header__b--link" do
            = icon('far', "meh", class: 'down-header__b--icon')
            マイページ
    - else  
      .down-header__box
        = link_to "新規登録", signup1_users_path, class: 'down-header__box--sign'
        = link_to "ログイン", new_user_session_path, class: 'down-header__box--log' 
      

          
            
      

       
          

         