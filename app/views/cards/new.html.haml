.main
  .sub-main
    .header
      = render partial: "/items/header"
      = render partial: "/items/sellbutton"
.contents
  - breadcrumb :card
  = render partial: "users/menu_head"
  .center
    = render partial: "users/left"
    .member-registration
      .main
        .member-main
          = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
            .member-main__registration
              クレジットカード情報登録
            .member-content
              .form
                .form__groups
                  カード番号
                  .form__groupss
                    必須
                .form__groupsss
                  = text_field "number", "", class: "form__groupsss--cc", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              .signup-card-list
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1714804574"}
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1714804574"}
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1714804574"}
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1714804574"}
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1714804574"}
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1714804574"}
                %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1714804574"}
              .form
                .form__groups
                  有効期限
                  .form__groupss
                    必須
                .select-wrap__half
                  %select.select-wrap__half--default{name: "exp_month", type: "text", id: "exp_month"}
                    %option{value: ""} --
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                  %i.icon-arrow-bottom
                  %h 月
                .select-wrap__half
                  %select.select-wrap__half--default{name: "exp_year", type: "text", id: "exp_year"}
                    %option{value: ""} --
                    %option{value: "2019"} 19
                    %option{value: "2020"} 20
                    %option{value: "2021"} 21
                    %option{value: "2022"} 22
                    %option{value: "2023"} 23
                    %option{value: "2024"} 24
                    %option{value: "2025"} 25
                    %option{value: "2026"} 26
                    %option{value: "2027"} 27
                    %option{value: "2028"} 28
                    %option{value: "2029"} 29
                  %i.icon-arrow-bottom
                  %h 年
                .form
                  .form__groups
                    セキュリティーコード
                    .form__groupss_form
                      必須
                  .form__groupsss
                    = text_field_tag "cvc", "", class: "form__groupsss--cc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
                .signup-seqcode-text
                  .form-question ?
                  カード裏面の番号とは？
                .btn-default
                #card_token
                  = submit_tag "追加する",class: "btn-default__red" ,id: "token_submit"
  .main
    .sub-main
      .footer
        = render partial: "items/footer"